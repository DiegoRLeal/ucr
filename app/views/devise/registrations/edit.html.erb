<div class="edit-profile-form-container">
  <!-- Cabeçalho do formulário com gradiente -->
  <div class="edit-profile-header">
    <h2><%= t('devise.registrations.edit.edit_account') %></h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-profile-form", data: { turbo: false } }) do |f| %>

    <!-- Campo Nome Completo -->
    <div class="input-group">
      <%= f.text_field :full_name, placeholder: " ", class: "input-field", autocomplete: "full_name" %>
      <label class="input-label"><%= t('activerecord.attributes.user.full_name') %></label>
    </div>

    <!-- Campo Email -->
    <div class="input-group">
      <%= f.email_field :email, placeholder: " ", class: "input-field", autocomplete: "email" %>
      <label class="input-label"><%= t('activerecord.attributes.user.email') %></label>
    </div>

    <!-- Campo Senha Atual -->
    <div class="input-group">
      <%= f.password_field :current_password, placeholder: " ", class: "input-field",autocomplete: "current-password" %>
      <label class="input-label"><%= t('devise.registrations.edit.current_password') %></label>
    </div>

    <!-- Campo Nova Senha -->
    <div class="input-group">
      <%= f.password_field :password, placeholder: " ", class: "input-field", autocomplete: "new-password" %>
      <label class="input-label"><%= t('devise.registrations.edit.new_password') %></label>
    </div>

    <!-- Campo Confirmar Nova Senha -->
    <div class="input-group">
      <%= f.password_field :password_confirmation, placeholder: " ", class: "input-field", autocomplete: "new-password" %>
      <label class="input-label"><%= t('devise.registrations.edit.confirm_new_password') %></label>
    </div>

    <!-- Campo para Upload de Avatar -->
    <div class="input-group">
      <% if @user.avatar.attached? %>
        <%= image_tag url_for(@user.avatar), alt: "Avatar do Usuário", class: "avatar-preview" %>
      <% else %>
        <p><%= t('devise.registrations.edit.no_avatar_attached') %></p>
      <% end %>

      <div class="input-group">
        <%= f.file_field :avatar, direct_upload: true, class: "styled-input", id: 'file-upload' %>
      </div>
    </div>

    <div class="buttons">
      <!-- Botão de Enviar -->
      <div class="action-group">
        <%= f.submit t('devise.registrations.edit.submit'), class: "btn" %>
      </div>

    <% end %>

      <!-- Botão de Logout -->
      <div class="action-group">
        <%= button_to t('devise.shared.links.logout'), destroy_user_session_path, method: :delete, data: { confirm: t('devise.shared.links.logout_confirmation') }, class: "btn btn-secondary" %>
      </div>

      <!-- Botão de Cancelar Conta -->
      <div class="action-group">
        <%= button_to t('devise.registrations.edit.cancel_account'), registration_path(resource_name), data: { confirm: t('devise.registrations.edit.cancel_confirmation') }, method: :delete, class: "btn btn-danger mt-3 btn-gradient" %>
      </div>
    </div>
</div>

