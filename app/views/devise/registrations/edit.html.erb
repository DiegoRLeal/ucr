<style>
  body {
    background-color: #283e51d4;
    font-family: 'Poppins', sans-serif;
  }

  /* Container Principal */
.edit-profile-form-container {
  max-width: 60%;
  background-color: #fff;
  border-radius: 20px;
  box-shadow: 0px 20px 25px hsla(0,0%,13%,0.5);
  overflow: hidden;
  margin: 50px auto;
  text-align: center;
}

/* Header com Gradiente */
.edit-profile-header {
  background: #212121e0;
  padding: 2rem 1rem;
  color: #d7d5dd;
}

.edit-profile-header h2 {
  font-size: 1.75rem;
  font-weight: bold;
  margin: 0;
}

/* Campos do Formulário */
.input-group {
  position: relative;
  margin-top: 20px;
}

.input-field {
  width: 100%;
  padding: 0.75rem 1rem;
  font-size: 0.875rem;
  color: #4a5568;
  background-color: transparent;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.input-field:focus {
  outline: none;
  border-color: #0ea5e9;
  box-shadow: 0 0 8px rgba(14, 165, 233, 0.2);
}

.input-field::placeholder {
  color: #cbd5e0;
}

/* Botão de anexar imagem */
  .styled-input::-webkit-file-upload-button {
    visibility: hidden; /* Esconde o botão de upload padrão */
  }

  .styled-input {
    display: inline-block;
    width: 100%;
    padding: 10px;
    font-size: 16px;
    color: #000;
    cursor: pointer;
    background-color: #f1f1f1;
    border: 2px solid #ccc;
    border-radius: 5px;
  }

  .styled-input:hover {
    background-color: #e1e1e1;
  }

/* Label com Efeito */
.input-label {
  position: absolute;
  top: -8px;
  left: 12px;
  font-size: 0.75rem;
  background-color: white;
  padding: 0 6px;
  color: hsla(0,0%,13%,0.9);
  transition: 0.3s;
}

.input-field:focus + .input-label {
  color: #0ea5e9;
}

.input-field:not(:placeholder-shown) + .input-label {
  color: hsla(0,0%,13%,0.9);
}

/* Botões de Ação */
.action-group {
  padding: 20px;
}

.buttons {
  display: flex;
  justify-content: center;
  padding: 25px;
}

.btn {
  display: block;
  width: 200px;
  padding: 0.75rem;
  font-size: 0.875rem;
  font-weight: bold;
  text-transform: uppercase;
  color: white;
  border-radius: 12px;
  background: gray;
  /* transition: transform 0.3s ease, box-shadow 0.3s ease; */
  cursor: pointer;
  border: 2px solid hsl(var(--grooble));
}

.btn.btn-outline-secondary {
  text-decoration: none;
  color: white;
}

.btn:hover {
  transform: scale(1.03);
  border-color: gray;
  border: 1px solid;
  background-color: white;
  color: gray;
}

.btn:active {
  transform: scale(0.98);
  box-shadow: 0 4px 10px rgba(14, 165, 233, 0.3);
}

/* Estilo de Alertas */
.alert {
  background-color: #f1d1d1;
  color: #0c601b;
  border: 1px solid #ebbebe;
  padding: 1rem;
  border-radius: 12px;
  text-align: left;
  gap: 10px;
  margin-left: 10px;
}

.btn-gradient {
  background: linear-gradient(139deg, #d40606, #e90e0e);
  color: white; /* Ajuste a cor do texto para ficar visível */
  border: none; /* Remova a borda, se necessário */
  /* box-shadow: 0 4px 10px rgb(233 14 14 / 50%); */
}

.btn-gradient:hover {
  background: white;
  color: red;

}

/* Button BACK */
.button {
  display: block;
  position: fixed; /* Fixar o botão na tela */
  bottom: 20px; /* Distância da parte inferior da página */
  left: 20px; /* Distância da parte esquerda da página */
  width: 56px;
  height: 56px;
  margin: 0;
  overflow: hidden;
  outline: none;
  background-color: transparent;
  cursor: pointer;
  border: 0;
  z-index: 1000; /* Garante que o botão fique acima de outros elementos */
}

.button:before,
.button:after {
  content: "";
  position: absolute;
  border-radius: 50%;
  inset: 7px;
}

.button:before {
  border: 4px solid #f0eeef;
  transition: opacity 0.4s cubic-bezier(0.77, 0, 0.175, 1) 80ms,
    transform 0.5s cubic-bezier(0.455, 0.03, 0.515, 0.955) 80ms;
}

.button:after {
  border: 4px solid #96daf0;
  transform: scale(1.3);
  transition: opacity 0.4s cubic-bezier(0.165, 0.84, 0.44, 1),
    transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  opacity: 0;
}

.button:hover:before,
.button:focus:before {
  opacity: 0;
  transform: scale(0.7);
  transition: opacity 0.4s cubic-bezier(0.165, 0.84, 0.44, 1),
    transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.button:hover:after,
.button:focus:after {
  opacity: 1;
  transform: scale(1);
  transition: opacity 0.4s cubic-bezier(0.77, 0, 0.175, 1) 80ms,
    transform 0.5s cubic-bezier(0.455, 0.03, 0.515, 0.955) 80ms;
}

.button-box {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
}

.button-elem {
  display: block;
  width: 20px;
  height: 20px;
  margin: 17px 18px 0 18px;
  transform: rotate(180deg);
  fill: #f0eeef;
}

.button:hover .button-box,
.button:focus .button-box {
  transition: 0.4s;
  transform: translateX(-56px);
}


/* Responsividade */
@media (max-width: 768px) {
  .edit-profile-form-container {
    max-width: 100%;
    padding: 20px;
  }

  .input-field {
    padding: 0.75rem;
  }

  .btn {
    font-size: 0.8rem;
  }
}
</style>
