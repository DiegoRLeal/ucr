<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<% if notice %>
  <div class="alert alert-info alert-dismissible fade show notifications-container flex" role="alert">
    <div class="flex-shrink-0">
      <svg class="alert-svg" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
      </svg>
    </div>
    <div class="alert-prompt-wrap">
      <%= notice %>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show notifications-container flex" role="alert">
    <div class="flex-shrink-0">
      <svg class="alert-svg" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
      </svg>
    </div>
    <div class="alert-prompt-wrap">
      <%= alert %>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<style>
/* Estilo Base para os Alertas */
.notifications-container {
  width: 320px;
  height: auto;
  font-size: 0.875rem;
  line-height: 1.25rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.flex {
  display: flex;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

.alert {
  position: absolute;
  top: 85vh;
  padding: 0.5rem 1rem; /* Reduzido para diminuir a altura */
  margin-bottom: 1rem;
  border: 1px solid transparent;
  border-radius: 0.375rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  font-size: 1rem;
  line-height: 1.5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  animation: fadeIn 0.3s ease-out forwards;
  opacity: 0;
  background-color: rgb(254 252 232);
  margin: 60px 0 10px 0;
}

/* Alerta de Informação (Info) */
.alert-info {
  border-color: rgb(250 204 21); /* Cor da borda para o alerta info */
  color: rgb(202 138 4); /* Cor do texto */
}

/* Alerta de Aviso (Warning) */
.alert-warning {
  border-color: rgb(250 204 21); /* Cor da borda para o alerta warning */
  color: rgb(202 138 4); /* Cor do texto */
}

/* Estilo dos ícones SVG no alerta */
.alert-svg {
  height: 1.25rem;
  width: 1.25rem;
  color: rgb(250 204 21);
  margin-right: 0.5rem; /* Espaço entre o ícone e o texto */
}

/* Estilo da área de texto do alerta */
.alert-prompt-wrap {
  color: rgb(202 138 4);
  flex-grow: 1; /* Permite que o texto ocupe o espaço disponível */
  display: flex;
  align-items: center; /* Alinha o texto verticalmente com o ícone */
}

/* Estilo do botão de fechar (close) */
.btn-close {
  background-color: transparent;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
  font-size: 1rem;
  transition: transform 0.3s ease, background-color 0.2s ease;
}

.btn-close:hover {
  background-color: rgba(0, 0, 0, 0.1);
  transform: scale(1.1);
}

.alert-prompt-link {
  font-weight: 500;
  color: rgb(141, 56, 0);
  text-decoration: underline;
}

.alert-prompt-link:hover {
  color: rgb(202 138 4);
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.fade.show {
  opacity: 1;
  transition: opacity 0.15s linear;
  height: 40px;
  width: auto;
  display: -webkit-box;
}

.fade:not(.show) {
  opacity: 0;
  transition: opacity 0.15s linear;
}
</style>
