<script>
function loadContent(url) {
  // Verifica se o conteúdo já está carregado para evitar recarregar desnecessariamente
  if (document.getElementById('sidebar-content').getAttribute('data-loaded') === url) {
    return; // Se já foi carregado, não faz nada
  }

  fetch(url, {
    method: 'GET',
    headers: {
      'X-Requested-With': 'XMLHttpRequest',
      'Content-Type': 'text/html'
    }
  })
  .then(response => {
    if (response.ok) {
      return response.text();
    } else {
      throw new Error('Failed to load content');
    }
  })
  .then(data => {
    document.getElementById('sidebar-content').innerHTML = data;
    document.getElementById('sidebar-content').setAttribute('data-loaded', url); // Marca o conteúdo como carregado
  })
  .catch(error => {
    console.error('Error loading content:', error);
  });
}

// Prevenir o comportamento padrão e carregar conteúdo sem redirecionar
document.querySelectorAll('a[data-dynamic="true"]').forEach(link => {
  link.addEventListener('click', function(event) {
    event.preventDefault(); // Prevenir que o link redirecione
    loadContent(this.getAttribute('href')); // Carregar o conteúdo
  });
});

</script>
