      <div class="card" style="background-image: url('<%= pilot.image_url %>');">
        <div class="border">
          <h2><%= pilot.name %></h2>
          <div class="<%= 'categoria ' + (pilot&.categoria&.downcase || '') %>" id="category">
            <%= pilot&.categoria %>
          </div>
          <div class="icons">
            <a href="<%= pilot.instagram %>" target="_blank" title="Instagram">
              <i class="fab fa-instagram" id="social" aria-hidden="true"></i>
            </a>
            <a href="<%= pilot.twitch %>" target="_blank" title="Twitch">
              <i class="fab fa-twitch" id="social" aria-hidden="true"></i>
            </a>
            <a href="<%= pilot.youtube %>" target="_blank" title="YouTube">
              <i class="fab fa-youtube" id="social" aria-hidden="true"></i>
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="name-category" id="name-am">
    <h3>CATEGORIA - AM</h3>
  </div>
  <div class="am-category">
    <% @pilots.select { |pilot| pilot.categoria == 'AM' }.each do |pilot| %>
      <div class="card" style="background-image: url('<%= pilot.image_url %>');">
        <div class="border">
          <h2><%= pilot.name %></h2>
          <div class="<%= 'categoria ' + (pilot&.categoria&.downcase || '') %>" id="category">
            <%= pilot&.categoria %>
          </div>
          <div class="icons">
            <a href="<%= pilot.instagram %>" target="_blank" title="Instagram">
              <i class="fab fa-instagram" id="social" aria-hidden="true"></i>
            </a>
            <a href="<%= pilot.twitch %>" target="_blank" title="Twitch">
              <i class="fab fa-twitch" id="social" aria-hidden="true"></i>
            </a>
            <a href="<%= pilot.youtube %>" target="_blank" title="YouTube">
              <i class="fab fa-youtube" id="social" aria-hidden="true"></i>
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

