<%= render 'shared/navbar' %>

<div class="wrapper">
  <h1 class="mega montserrat bold">
  Nossos <span class="color-emphasis-1">pilotos</span><br>
    por <span class="color-emphasis-1">categoria.</span>
  </h1>
</div>

<div class="container">
  <div class="name-category" id="name-pro">
    <h3>CATEGORIA - PRO</h3>
  </div>
  <div class="pro-category">
    <% @pilots.select { |pilot| pilot.categoria == 'PRO' }.each do |pilot| %>
      <div class="card" style="background-image: url('<%= pilot.image_url %>');">
        <div class="border">
          <h2><%= pilot.name %></h2>
          <div class="<%= 'categoria ' + (pilot&.categoria&.downcase || '') %>" id="category">
            <%= pilot&.categoria %>
          </div>
          <div class="icons">
            <a href="<%= pilot.instagram %>" target="_blank" title="Instagram">
              <i class="fab fa-instagram" id="social" aria-hidden="true"></i>
            </a>
            <a href="<%= pilot.twitch %>" target="_blank" title="Twitch">
              <i class="fab fa-twitch" id="social" aria-hidden="true"></i>
            </a>
            <a href="<%= pilot.youtube %>" target="_blank" title="YouTube">
              <i class="fab fa-youtube" id="social" aria-hidden="true"></i>
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="name-category" id="name-silver">
    <h3>CATEGORIA - SILVER</h3>
  </div>
  <div class="silver-category">
