<div class="container">
  <% @pilots.each_with_index do |pilot, index| %>
    <div class="card card<%= index %>" style="background-image: url('<%= pilot.image_url %>');">
      <div class="border">
        <h2><%= pilot.name %></h2>
        <div class="icons">
          <a href="<%= pilot.instagram %>" target="_blank" title="Instagram">
            <i class="fab fa-instagram" aria-hidden="true"></i>
          </a>
          <a href="<%= pilot.twitch %>" target="_blank" title="Twitch">
            <i class="fab fa-twitch" aria-hidden="true"></i>
          </a>
          <a href="<%= pilot.youtube %>" target="_blank" title="YouTube">
            <i class="fab fa-youtube" aria-hidden="true"></i>
          </a>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
  body {
  background: linear-gradient(to bottom, #485563, #29323c);
}

.container {
  height: 100vh;
  width: 100vw;
  max-height: 800px;
  max-width: 1280px;
  min-height: 600px;
  min-width: 1000px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0 auto;
}

.border {
  height: 369px;
  width: 290px;
  background: transparent;
  border-radius: 10px;
  transition: border 1s;
  position: relative;
}

.border:hover {
  border: 1px solid white;
}

.card {
  height: 379px;
  width: 300px;
  background: grey;
  border-radius: 10px;
  transition: background 0.8s;
  overflow: hidden;
  background: black;
  box-shadow: 0 70px 63px -60px #000000;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.card0, .card1, .card2 {
  background-size: 300px;
  background-position: center;
  background-repeat: no-repeat;
}

.card0:hover {
  background-size: 600px;
}

.card1:hover {
  background-size: 600px;
}

.card2:hover {
  background-size: 600px;
}

h2 {
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  color: white;
  margin: 20px;
  opacity: 0;
  transition: opacity 1s;
}

.card:hover h2 {
  opacity: 1;
}

.fab {
  opacity: 0;
  transition: opacity 1s;
  color: white;
  font-size: 20px;
}

.fab:hover {
  opacity: 0;
  transition: opacity 1s;
  color: red;
}

.card:hover .fab {
  opacity: 1;
}

.icons {
  position: absolute;
  fill: #fff;
  color: #fff;
  height: 130px;
  top: 226px;
  width: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
</style>
