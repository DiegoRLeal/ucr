<h1 class="page-title text-center">Voltas de <%= @driver.driver_first_name %> <%= @driver.driver_last_name %></h1>

<div class="table-responsive container-lg py-5">
  <table class="table table-custom table-hover align-middle text-center">
    <thead>
      <tr>
        <th class="lap-number">Número da Volta</th>
        <th>Split 1</th>
        <th>Split 2</th>
        <th>Split 3</th>
        <th>Tempo da Volta</th>
      </tr>
    </thead>
    <tbody>
      <% @laps.each_with_index do |lap, index| %>
        <tr class="<%= lap['isValidForBest'] ? 'valid-lap' : 'invalid-lap' %>">
          <td><%= index + 1 %></td>
          <% lap['splits'].each_with_index do |split, index| %>
            <td><%= format_laptime(split) %></td>
          <% end %>
          <td><%= format_laptime(lap['laptime']) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<button class="button" onclick="history.back()">
  <div class="button-box">
    <span class="button-elem">
      <svg viewBox="0 0 46 40" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"
        ></path>
      </svg>
    </span>
    <span class="button-elem">
      <svg viewBox="0 0 46 40">
        <path
          d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"
        ></path>
      </svg>
    </span>
  </div>
</button>

<style>
  /* Estilos Globais */
  body {
    background-color: #f0f4f8;
    font-family: 'Poppins', sans-serif;
  }

  /* Título da página */
  .page-title {
    font-size: 2.2rem;
    color: #fff;
    margin-bottom: 30px;
    font-weight: 600;
  }

  .page-title {
  background-image: url(https://www.overtake.gg/attachments/assetto-corsa-competizione-hungaroring-jpg.281317/);
  width: auto;
  height: 265px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  padding: 0;
  margin: 0;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Estilo da Tabela */
  .table-custom {
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
    color: #fff;
    overflow: hidden;
    width: 100%;
    text-align: center;
  }

  .table-custom th {
    background-color: rgba(44, 62, 80, 0.9);
    color: #ecf0f1;
    font-weight: 600;
    text-transform: uppercase;
    padding: 15px;
  }

  .table-custom td {
    padding: 20px;
    font-size: 1rem;
  }

  .table-custom tr {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .table-custom tr:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
  }

  /* Voltas Válidas e Inválidas */
  .valid-lap {
    background: #80808000;
    color: #2ecc71;
  }

  .invalid-lap {
    background: #80808000;
    color: red;
  }

  .lap-number {
    width: 10%;
  }

   /* Button BACK */
.button {
  display: block;
  position: fixed; /* Fixar o botão na tela */
  bottom: 20px; /* Distância da parte inferior da página */
  left: 20px; /* Distância da parte esquerda da página */
  width: 56px;
  height: 56px;
  margin: 0;
  overflow: hidden;
  outline: none;
  background-color: transparent;
  cursor: pointer;
  border: 0;
  z-index: 1000; /* Garante que o botão fique acima de outros elementos */
}

.button:before,
.button:after {
  content: "";
  position: absolute;
  border-radius: 50%;
  inset: 7px;
}

.button:before {
  border: 4px solid #f0eeef;
  transition: opacity 0.4s cubic-bezier(0.77, 0, 0.175, 1) 80ms,
    transform 0.5s cubic-bezier(0.455, 0.03, 0.515, 0.955) 80ms;
}

.button:after {
  border: 4px solid #96daf0;
  transform: scale(1.3);
  transition: opacity 0.4s cubic-bezier(0.165, 0.84, 0.44, 1),
    transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  opacity: 0;
}

.button:hover:before,
.button:focus:before {
  opacity: 0;
  transform: scale(0.7);
  transition: opacity 0.4s cubic-bezier(0.165, 0.84, 0.44, 1),
    transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.button:hover:after,
.button:focus:after {
  opacity: 1;
  transform: scale(1);
  transition: opacity 0.4s cubic-bezier(0.77, 0, 0.175, 1) 80ms,
    transform 0.5s cubic-bezier(0.455, 0.03, 0.515, 0.955) 80ms;
}

.button-box {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
}

.button-elem {
  display: block;
  width: 20px;
  height: 20px;
  margin: 17px 18px 0 18px;
  transform: rotate(180deg);
  fill: #f0eeef;
}

.button:hover .button-box,
.button:focus .button-box {
  transition: 0.4s;
  transform: translateX(-56px);
}

  /* Responsividade */
  @media (max-width: 768px) {
    .page-title {
      font-size: 1.8rem;
    }

    .table-custom td {
      font-size: 0.85rem;
    }
  }
</style>
