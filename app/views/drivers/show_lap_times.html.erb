<h1>Voltas de <%= @driver.driver_first_name %> <%= @driver.driver_last_name %></h1>

<table>
  <thead>
    <tr>
      <th>NÃºmero da Volta</th>
      <th>Tempo da Volta</th>
      <th>Splits</th>
    </tr>
  </thead>
  <tbody>
    <% @driver.laps.each_with_index do |lap, index| %>
      <tr style="background-color: <%= lap['isValidForBest'] ? 'green' : 'red' %>;">
        <td><%= index + 1 %></td>
        <td><%= format_laptime(lap['laptime']) %></td>  <!-- Usando o helper para formatar o laptime -->
        <td><%= lap['splits'].join(", ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
