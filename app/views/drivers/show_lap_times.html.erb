<h1 class="page-title text-center">Voltas de <%= @driver.driver_first_name %> <%= @driver.driver_last_name %></h1>

<div class="table-responsive container-lg py-4">
  <table class="table table-custom table-hover align-middle text-center">
    <thead>
      <tr>
        <th>Número da Volta</th>
        <th>Tempo da Volta</th>
        <th>Splits</th>
      </tr>
    </thead>
    <tbody>
      <% @laps.each_with_index do |lap, index| %>
        <tr class="<%= lap['isValidForBest'] ? 'bg-success text-white' : 'bg-danger text-white' %>">
          <td><%= index + 1 %></td>
          <td><%= format_laptime(lap['laptime']) %></td>
          <td><%= lap['splits'].map { |split| format_laptime(split) }.join(", ") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<button class="button" onclick="history.back()">
  <div class="button-box">
    <span class="button-elem">
      <svg viewBox="0 0 46 40" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"
        ></path>
      </svg>
    </span>
    <span class="button-elem">
      <svg viewBox="0 0 46 40">
        <path
          d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"
        ></path>
      </svg>
    </span>
  </div>
</button>

<style>
  /* Estilos Globais */
  body {
    background-color: #f0f4f8;
    font-family: 'Poppins', sans-serif;
  }

  /* Título da página */
  .page-title {
    font-size: 2.2rem;
    color: #fff;
    margin-bottom: 30px;
    font-weight: 600;
  }

  .page-title {
  background-image: url(https://www.overtake.gg/attachments/assetto-corsa-competizione-hungaroring-jpg.281317/);
  width: auto;
  height: 265px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  padding: 0;
  margin: 0;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

  /* Tabela Customizada */
  .table-custom {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .table-custom th {
    background-color: #2c3e50;
    color: #ecf0f1;
    font-weight: 500;
    text-transform: uppercase;
  }

  .table-custom td {
    color: white;
    font-size: 1rem;
  }

  /* Ajustes de cores para voltas válidas e inválidas */
  .bg-success {
    background-color: #27ae60 !important;
  }

  .bg-danger {
    background-color: #e74c3c !important;
  }

  .text-white {
    color: #fff;
  }

  .table-custom tr:hover {
    background-color: #f0f4f8;
    transition: background-color 0.3s ease;
  }

   /* Button BACK */
.button {
  display: block;
  position: fixed; /* Fixar o botão na tela */
  bottom: 20px; /* Distância da parte inferior da página */
  left: 20px; /* Distância da parte esquerda da página */
  width: 56px;
  height: 56px;
  margin: 0;
  overflow: hidden;
  outline: none;
  background-color: transparent;
  cursor: pointer;
  border: 0;
  z-index: 1000; /* Garante que o botão fique acima de outros elementos */
}

.button:before,
.button:after {
  content: "";
  position: absolute;
  border-radius: 50%;
  inset: 7px;
}

.button:before {
  border: 4px solid #f0eeef;
  transition: opacity 0.4s cubic-bezier(0.77, 0, 0.175, 1) 80ms,
    transform 0.5s cubic-bezier(0.455, 0.03, 0.515, 0.955) 80ms;
}

.button:after {
  border: 4px solid #96daf0;
  transform: scale(1.3);
  transition: opacity 0.4s cubic-bezier(0.165, 0.84, 0.44, 1),
    transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  opacity: 0;
}

.button:hover:before,
.button:focus:before {
  opacity: 0;
  transform: scale(0.7);
  transition: opacity 0.4s cubic-bezier(0.165, 0.84, 0.44, 1),
    transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.button:hover:after,
.button:focus:after {
  opacity: 1;
  transform: scale(1);
  transition: opacity 0.4s cubic-bezier(0.77, 0, 0.175, 1) 80ms,
    transform 0.5s cubic-bezier(0.455, 0.03, 0.515, 0.955) 80ms;
}

.button-box {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
}

.button-elem {
  display: block;
  width: 20px;
  height: 20px;
  margin: 17px 18px 0 18px;
  transform: rotate(180deg);
  fill: #f0eeef;
}

.button:hover .button-box,
.button:focus .button-box {
  transition: 0.4s;
  transform: translateX(-56px);
}

  /* Responsividade */
  @media (max-width: 768px) {
    .page-title {
      font-size: 1.8rem;
    }

    .table-custom td {
      font-size: 0.9rem;
    }
  }
</style>
