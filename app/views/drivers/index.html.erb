<section class="cards">
  <% @tracks.each_with_index do |track_name, index| %>
    <% best_lap_info = @best_laps_by_track.find { |lap| lap.track_name == track_name } %>
    <article class="card card--<%= index + 1 %>">
      <div class="card__info-hover">
        <div class="card__clock-info">
          <svg class="card__clock" viewBox="0 0 24 24">
            <path d="M12,20A7,7 0 0,1 5,13A7,7 0 0,1 12,6A7,7 0 0,1 19,13A7,7 0 0,1 12,20M19.03,7.39L20.45,5.97C20,5.46 19.55,5 19.04,4.56L17.62,6C16.07,4.74 14.12,4 12,4A9,9 0 0,0 3,13A9,9 0 0,0 12,22C17,22 21,17.97 21,13C21,10.88 20.26,8.93 19.03,7.39M11,14H13V8H11M15,1H9V3H15V1Z" />
          </svg>
          <% if best_lap_info %>
            <span class="card__time"><%= format_laptime(best_lap_info.best_lap.to_i) %></span>
          <% else %>
            <span class="card__time">N/A</span> <!-- Caso nÃ£o haja uma melhor volta -->
          <% end %>
        </div>
      </div>
      <div class="card__img"></div>
      <%= link_to track_sessions_drivers_path(track_name: track_name), class: 'card_link' do %>
        <div class="card__img--hover"></div>
      <% end %>
      <div class="card__info">
        <span class="card__category"> Pista </span>
        <h3 class="card__title"><%= format_track_name(track_name) %></h3>
        <% if best_lap_info %>
          <span class="card__by">Melhor volta por <%= best_lap_info.driver_first_name %> <%= best_lap_info.driver_last_name %></span>
        <% else %>
          <span class="card__by">Sem dados de volta</span>
        <% end %>
      </div>
    </article>
  <% end %>
</section>

