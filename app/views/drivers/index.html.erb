<div class="container-lg py-4">
  <div class="row">
    <% @tracks.each do |track_name| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body text-center">
            <h5 class="card-title"><%= track_name %></h5>
            <%= link_to "Ver sessÃµes", track_sessions_drivers_path(track_name: track_name), class: 'btn btn-primary' %>
