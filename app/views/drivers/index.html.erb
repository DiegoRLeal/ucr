<h1>Relatório de Pistas e Pilotos</h1>

<table>
  <thead>
    <tr>
      <th>Nome da Pista</th>
      <th>Data</th>
      <th>Quantidade de Pilotos</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @track_sessions.each do |session| %>
      <tr>
        <td><%= session.track_name %></td>
        <td><%= session.session_date.strftime('%d/%m/%Y') %></td>
        <td><%= session.pilots_count %></td>
        <td>
          <%= link_to 'Ver tempos dos pilotos', show_pilot_times_path(track_name: session.track_name, session_date: session.session_date), class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
